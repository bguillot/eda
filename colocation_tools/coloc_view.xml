        <!--  VIEW FOR THE OBJECT : meal.attendance -->

<record model="ir.ui.view" id="meal_attendance_kanban_view">
    <field name="name">meal.attendance.kanban</field>
    <field name="model">meal.attendance</field>
    <field name="arch" type="xml">
        <kanban default_group_by="partner_id" >
            <field name="color"/>
            <field name="month"/>
            <field name="partner_id"/>
            <field name="meal_qty"/>
            <field name="write_date"/>
            <templates>
            <t t-name="kanban-box">
                <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                    <div class="oe_dropdown_toggle oe_dropdown_kanban" groups="base.group_user">
                        <span class="oe_e">í</span>
                        <ul class="oe_dropdown_menu">
                            <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Edit...</a></li></t>
                            <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                            <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                        </ul>
                    </div>

                    <div class="oe_kanban_content">
                        <div><b><field name="month"/></b></div>
                        <div>
                            <field name="partner_id"/><br/>
                        </div>
                        <div class="oe_kanban_bottom_right">
                            <div class="oe_event_date "><t t-esc="record.write_date.raw_value.getDate()"/>
                                <t t-esc="record.write_date.raw_value.toString('MMM')"/>
                                <t t-esc="record.write_date.raw_value.getFullYear()"/>
                            </div>
<!--                        <div><b><field name="write_date"/></b></div>-->
<!--                           <img t-att-src="kanban_image('res.partner', 'image_small', record.partner_id.raw_value)" t-att-title="record.partner_id.value" width="30" height="30" class="oe_kanban_avatar"/>-->
                        </div>
                        <div class="oe_kanban_footer_left">
                            <span groups="base.group_no_one" >
                                <span class="oe_e">N</span>
                                <t t-esc="Math.round(record.meal_qty.raw_value)"/>
                            </span>
                            <div>
                                <t groups="base.group_user">
                                    <button type="object" string="Remove meal" name="remove_meal_attendance" class="oe_kanban_button">  -  </button>
                                    <button type="object" string="Add meal" name="add_meal_attendance" class="oe_kanban_button">  +  </button>
                                </t>
                            </div>
                        </div>
                    </div>
                    <div class="oe_clear"></div>
                </div>
            </t>
            </templates>
        </kanban>
    </field>
</record>

